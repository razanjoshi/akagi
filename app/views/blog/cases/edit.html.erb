<% provide(:title,'编辑条目')%>
<h1>
    编辑条目
</h1>



<div class="row">
    <div class="col-md-12">
        <%= form_for (@case) do |f| %>
            <% render'shared/error_messages', object: f.object %>

            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>
            <div id="editormd">
                <%= f.label :body %>
                <%= f.text_area :body, class: 'form-control',style:"display:none;" %>

            </div>
            <script type="text/javascript">
                    $(function() {
                        var Editor = editormd("editormd", {
                            height  : 640,
                            syncScrolling : "single",
                            path : "    /editormdlib/"
                        });
                    /*
                    // or
                    var editor = editormd({
                        id   : "editormd",
                        path : "../lib/"
                    });
                    */
                });
            </script>
            <%= label :case ,:bangumi %>
            <%= text_field :info,:bangumi, class: 'form-control' %>

            <%= f.submit "编辑条目", class:"btn btn-primary" %>

        <% end %>

    </div>

</div>
